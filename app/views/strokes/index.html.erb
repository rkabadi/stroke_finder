<h1>Listing strokes</h1>

<table>
  <thead>
    <tr>
      <th>Shot</th>
      <th>Hand</th>
      <th>Grip</th>
      <th>Spin</th>
      <th>Link</th>
      <th>Player</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @strokes.each do |stroke| %>
      <tr>
        <td><%= Shot.find(stroke.shot_id).name %></td>
        <td><%= Hand.find(stroke.hand_id).name %></td>
        <td><%= Grip.find(stroke.grip_id).name %></td>
        <td><%= Spin.find(stroke.spin_id).name %></td>
        <td><%= stroke.link %></td>
        <td><%= stroke.player.name %></td>
        <td><%= link_to 'Show', stroke %></td>
        <td><%= link_to 'Edit', edit_stroke_path(stroke) %></td>
        <td><%= link_to 'Destroy', stroke, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

